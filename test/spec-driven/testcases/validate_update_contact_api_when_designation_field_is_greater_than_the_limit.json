{
  "details": {
    "summary": "Validate Update contact API when designation field is greater than the limit",
    "operationId": "updateContactById",
    "tags": [
      "CRUD APIs"
    ]
  },
  "validation": {
    "assertions": [
      {
        "source": "statusCode",
        "operator": "equalToNumber",
        "expectedValue": "400"
      },
      {
        "source": "textBody",
        "operator": "Default Schema Validator"
      },
      {
        "source": "textBody",
        "property": null,
        "operator": "Default Validator",
        "expectedValue": ""
      },
      {
        "source": "request",
        "property": null,
        "operator": "validateRequestSchema",
        "expectedValue": null
      }
    ],
    "expectedBody": {
      "content": {
        "errors": {
          "designation": "field length cannot be greater than 35"
        }
      },
      "type": "json"
    },
    "expectedSchema": {
      "content": {
        "$ref": "#/{{$operation}}/responses/400"
      },
      "type": "json"
    },
    "ignoreRequestFields": [
      "body.designation"
    ]
  },
  "request": {
    "url": "{{baseURL}}/contacts/{{validContactId}}",
    "method": "PUT",
    "headers": {
      "Content-Type": "application/x-www-form-urlencoded"
    },
    "body": {
      "content": null,
      "type": "form-urlencoded",
      "formParams": [
        {
          "name": "name",
          "value": "John Doe"
        },
        {
          "name": "email",
          "value": "john.doe@example.com"
        },
        {
          "name": "designation",
          "value": "Sample designation whose length is greater than the limit"
        },
        {
          "name": "organization",
          "value": "example.com"
        },
        {
          "name": "country",
          "value": "India"
        },
        {
          "name": "aboutMe",
          "value": "Passionate for making vREST NG, world's #1 API Testing Tool."
        }
      ]
    }
  },
  "extensions": {
    "vrest-command-executor-plugin": {
      "executionCommand": "{{cpCmd}} {{$projectDir}}/dump.json {{$projectDir}}/../../db.json"
    }
  }
}